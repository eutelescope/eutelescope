<marlin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ilcsoft.desy.de/marlin/marlin.xsd">

   <execute>
      <processor name="MyEUTelEventViewer"/>
      <processor name="MyEUTelUtilityPrintEventNumber"/>
   </execute>

   <global>
      <parameter name="LCIOInputFiles"> @LcioPath@/run@RunNumber@-alibava-tracking@TrackSuffix@.slcio </parameter>
      <parameter name="GearXMLFile" value="@GearFilePath@/@GearFile@"/>
      <parameter name="MaxRecordNumber" value="@MaxRecordNumber@"/>
      <parameter name="SkipNEvents" value="@SkipNEvents@"/>
      <parameter name="SupressCheck" value="false"/>
      <parameter name="Verbosity" value="@Verbosity@"/>
   </global>

 <processor name="MyEUTelEventViewer" type="EUTelEventViewer">
 <!--Event display-->
  <!--Track collection names-->
  <parameter name="TrackCollections" type="string" lcioInType="Track"> @TrackNr@ </parameter>
  <!--Tracker hit collection names-->
  <parameter name="TrackerHitCollections" type="string" lcioInType="TrackerHit"> @HitNr@ </parameter>
  <!--Alignment constants from the condition file, used in detector model -1-->
  <parameter name="AlignmentConstantName" type="string" value="totalalignment"/>
  <!--This is the time in seconds between two following event displays. Enabled only when WaitForKeybord is off-->
  <parameter name="AutoForwardDelay" type="double" value=".3"/>
  <!--To highlight measured DUT hits, set it's sensor id here. -1 to switch this off-->
  <parameter name="DUTHighlight" type="int" value="6"/>
  <!--Detector Model: 99999 to draw the ideal model taken from the GEAR description (with no rotations), -1 to draw the model described by GEAR and corrected for alignment, -2 to draw the model from GEAR with rotations.-->
  <parameter name="DetectorModel" type="int" value="-2"/>
  <!--Size of drawn hits-->
  <parameter name="HitSize" type="int" value="10"/>
  <!--Layer for Tracker Hits-->
  <parameter name="LayerTrackerHit" type="int" value="1"/>
  <!--Layer for Tracks-->
  <parameter name="LayerTracks" type="int" value="0"/>
  <!--Size of drawn hits-->
  <parameter name="LineSize" type="int" value="4"/>
  <!--Additional drawn sensor thickness for visibility in detector models -1 and -2-->
  <!--parameter name="SensorThickness" type="double" value="1.5"/-->
  <!--verbosity level of this processor ("DEBUG0-4,MESSAGE0-4,WARNING0-4,ERROR0-4,SILENT")-->
  <parameter name="Verbosity" type="string" value="DEBUG1"/>
  <!--Wait for keyboard input before proceeding to next event-->
  <parameter name="WaitForKeyboard" type="bool" value="@User@"/>
  <!--Scaling factor for all x dimensions-->
  <parameter name="XScale" type="double" value="1"/>
  <!--Scaling factor for all y dimensions-->
  <parameter name="YScale" type="double" value="1"/>
  <!--Scaling factor for all z dimensions-->
  <parameter name="ZScale" type="double" value="0.2"/>
</processor>

 <processor name="MyEUTelUtilityPrintEventNumber" type="EUTelUtilityPrintEventNumber">
 <!--EUTelUtilityPrintEventNumber prints event number to screen depending on the verbosity level-->
  <!--Print event number for every n-th event-->
  <parameter name="EveryNEvents" type="int" value="10"/>
  <!--verbosity level of this processor ("DEBUG0-4,MESSAGE0-4,WARNING0-4,ERROR0-4,SILENT")-->
  <!--parameter name="Verbosity" type="string" value=""/-->
  <!--print the event timestamp as read from LCIO-->
  <!--parameter name="printTimestamp" type="bool" value="false"/-->
</processor>

</marlin>
