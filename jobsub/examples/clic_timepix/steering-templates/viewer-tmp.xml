<marlin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ilcsoft.desy.de/marlin/marlin.xsd">

   <execute>
      <--processor name="LoadAlignment"/>
      <processor name="MyEventViewer"/>
   </execute>

   <global>
      <parameter name="LCIOInputFiles"> @InputFile@ </parameter>
      <parameter name="GearXMLFile" value="@GearPath@/@GearFile@"/>
      <parameter name="MaxRecordNumber" value="5001"/>
      <parameter name="SkipNEvents" value="1"/>
      <parameter name="SupressCheck" value="false"/>
      <parameter name="Verbosity" value="MESSAGE"/>
   </global>

 
 
  <processor name="LoadAlignment" type="ConditionsProcessor">
 <!--ConditionsProcessor provides access to conditions data  transparently from LCIO files or a databases, using LCCD-->
  <!--Initialization of a conditions database handler-->
  <!--parameter name="DBCondHandler" type="StringVec"> conditionsName /lccd/myfolder HEAD </parameter-->
  <!--Initialization of a conditions db file handler-->
  <!--parameter name="DBFileHandler" type="StringVec"> conditionsName conditions.slcio collectionName </parameter-->
  <!--Initialization string for conditions database-->
  <parameter name="DBInit" type="string" value="localhost:lccd_test:calvin:hobbes"/>
  <!--Initialization of a data file handler-->
  <!--parameter name="DataFileHandler" type="StringVec" value="conditionsName"/-->
  <!--Initialization of a simple conditions file handler-->
  <parameter name="SimpleFileHandler" type="StringVec"> alignment @AlignmentFile@ alignment </parameter>
 </processor>
 
 
 
 
 
 <processor name="MyEventViewer" type="EUTelEventViewer">
 <!--Event display-->
  <!--Track collection names-->
  <parameter name="TrackCollections" type="string" lcioInType="Track"> track </parameter>
  <!--parameter name="ZSHitCollections" type="string" lcioInType="TrackerData"> zsdata_m26 zsdata_timepix </parameter>
  <!--Tracker hit collection names-->
  <parameter name="TrackerHitCollections" type="string" lcioInType="TrackerHit"> alignedHit </parameter>
  <!--Alignment constant from the condition file-->
  <parameter name="AlignmentConstantName" type="string" value="alignment"/>
  <!--This is the time in second between two following display
Enable only when WaitForKeybord is off-->
  <parameter name="AutoForwardDelay" type="double" value="4"/>
  <!--Detector Model:
 99999 to draw the ideal model taken from the GEAR description
    -1 to draw the model described by GEAR and corrected for alignment-->
  <parameter name="DetectorModel" type="int" value="99999"/>
  <!--Layer for Tracker Hits-->
  <parameter name="LayerTrackerHit" type="int" value="1"/>
  <!--Layer for Tracks-->
  <parameter name="LayerTracks" type="int" value="2"/>
  <!--verbosity level of this processor ("DEBUG0-4,MESSAGE0-4,WARNING0-4,ERROR0-4,SILENT")-->
  <!--parameter name="Verbosity" type="string" value=""/-->
  <!--Wait for Keyboard before proceed-->
  <parameter name="WaitForKeyboard" type="bool" value="true"/>
</processor>

</marlin>
